<%= form_for @lock_box, :html => {:multipart => true} do |f| %>
	<%= render 'shared/error_messages', object: f.object%>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="field-group ">

      	<%= f.hidden_field :user_id %>

				<div class="field">
					<%= f.label :label %><br />
					<%= f.text_field :label, autofocus: true, placeholder: "What would you like to call this new locked item?" %> 
				</div>

				<div class="field">
					<%= f.label :data %><br />
					<%= f.file_field :data %> 
				</div>

				<div class="field">
					<%= f.label :description %><br />
					<%= f.text_area :description, placeholder: "When and how do you want this to be released?" %> 
				</div>

				<div class="actions">
			    <%= f.submit "Encrypt, Lock, and Upload", class: "btn btn-primary" %>
			  </div>

			</div>
		</div>
	</div>


<% end %>